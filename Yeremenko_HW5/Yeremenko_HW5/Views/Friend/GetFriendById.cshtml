@{
    ViewData["Title"] = "Find Friend";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*@page "{Id:int}"*@
@{
    bool friendFound = false;
    for (int i=0; i < Friend.friendsList.Count; i++){
        if (Friend.friendsList[i].Id == ViewBag.Id)
        {
            friendFound = true;
            <table width="100%" cellspacing="0" cellpadding="5">
                <tr> 
                <td width="250" valign="top">
                    <div>
                        <img src="/images/human.png" width="100" height="100"/>
                    </div>
                </td>
                <td valign="top" value="@ViewBag.Id" name="FriendId">
                    <div>
                        <p style="color:#0000ff">ID: @Friend.friendsList.Find(x => x.Id == ViewBag.Id)?.Id</p>
                        <div>
                            <h3>@Friend.friendsList.Find(x => x.Id == ViewBag.Id)?.Name</h3> 
                        </div>
                        <div>
                            <p>@Friend.friendsList.Find(x => x.Id == ViewBag.Id)?.Place</p>
                        </div>
                    </div>
                </td>
                </tr>
            </table>
        }
    }
    if (!friendFound)
    {
        <p>The Friend with ID=@ViewBag.Id wasn't found</p>
    }
}
