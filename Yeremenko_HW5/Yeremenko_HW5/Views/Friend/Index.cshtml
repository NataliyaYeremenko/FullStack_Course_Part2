@{
    ViewData["Title"] = "Friend Info";
}
<h1>Friends List</h1>
@foreach (var friend in Friend.friendsList)
{
     <table width="100%" cellspacing="0" cellpadding="5">
       <tr> 
        <td width="250" valign="top">
            <div>
                <img src="images/human.png" width="100" height="100"/>
            </div>
        </td>
        <td valign="top">
            <div>
                <p style="color:#0000ff">ID: @friend.Id</p>
                <div>
                    <a href="~/Friend/Find/@friend.Id"><h3>@friend.Name</h3></a> 
                </div>
                <div>
                    <p>@friend.Place</p>
                </div>
            </div>
        </td>
       </tr>
       <tr></tr>
     </table>
}

