@model Yeremenko_HW5.Models.Friend

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    bool indexFound = false;
    foreach (var friend in Friend.friendsList)
    {
        if (friend.Id == ViewBag.Id) indexFound = true;
    }
    if (indexFound)
    {
        <h1>Delete</h1>

        <h4>Are you sure you want to delete this Friend?</h4>
        <div value="@ViewBag.Id">
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class = "col-sm-10">
                    @Friend.friendsList.Find(x=>x.Id==ViewBag.Id).Id
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class = "col-sm-10">
                    @Friend.friendsList.Find(x=>x.Id==ViewBag.Id).Name
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Place)
                </dt>
                <dd class = "col-sm-10">
                    @Friend.friendsList.Find(x=>x.Id==ViewBag.Id).Place
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    }
    else
    {
        <p>The Friend with ID=@ViewBag.Id wasn't found</p>
    }
}


